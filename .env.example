# OpenAI Configuration (Standard OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Azure OpenAI Configuration (Preferred for enterprise)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_ENDPOINT=https://your-azure-endpoint.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini-2024-07-18

# OpenAI Provider Selection (azure or openai)
OPENAI_PROVIDER=azure

# Application Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_FILE_WATCHER_TYPE=none

# Memory and Storage Configuration
MEMORY_DIR=memory
DATA_DIR=data
LOG_DIR=logs

# Security Configuration
PYTHONPATH=/app/src:/app
PYTHONUNBUFFERED=1

# Optional: Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/clinical_insights

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Optional: Performance Configuration
# MAX_UPLOAD_SIZE_MB=200
# SESSION_TIMEOUT_MINUTES=30
# CACHE_TTL_SECONDS=3600

# Development Configuration (set to false in production)
# DEBUG=false
# DEVELOPMENT_MODE=false